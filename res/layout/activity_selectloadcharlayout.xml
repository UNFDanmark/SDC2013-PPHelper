<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pandphelpurr"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/charRace1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/deleteCharacter2"
        style="@style/btnStyleArsenic"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/loadCharacter2"
        android:layout_alignBottom="@+id/loadCharacter2"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/loadCharacter2"
        android:text="@string/deleteCharacter" />

    <Button
        android:id="@+id/loadCharacter2"
        style="@style/btnStyleArsenic"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/charRace1"
        android:layout_marginTop="10dp"
        android:text="@string/loadCharacter2" />

    <TextView
        android:id="@+id/charName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/deleteCharacter2"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/charClass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="70dp"
        android:layout_toLeftOf="@+id/charName"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
